<div class="countries-list">
  <div class="row">
  <% @countries.where(region: continent_adj).each do |country| %>
  <div class="country-card col-sm-3 col-lg-1">
  <%= link_to country_path(country) do %>
  <div>
    <%= image_tag "http://placehold.it/30x30", class: "avatar" %>
    <p><%= country.name %></p>
  </div>
</div>
<% end %>
<% end %>
</div>
</div>
