<div class="countries-list">
  <div class="row">
    <% @countries.where(region: continent_adj).each do |country| %>
      <div class="country-card col-6">
        <%= link_to country_path(country) do %>
          <p><%= country.name %></p>
          <img class="country-photo"><%= image_tag country.photo %></img>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
