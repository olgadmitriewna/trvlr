<div class="countries-list">
  <div class="d-flex flex-wrap">
    <% @countries.where(region: continent_adj).each do |country| %>
      <div class="country-card">
        <%= link_to country_path(country) do %>
          <p><%= country.name %></p>
          <%= image_tag country.photo, class: "country-photo" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
