<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1490118121063-d12f8c4464ce?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1867&q=80);">
  <div class="container">
    <h1></h1>
    <a class="btn btn-flat" href="#"></a>
  </div>
</div>

<div class="info-section" id="continent-tabs">
  <div class="tab-bar">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-africa-tab" data-toggle="pill" href="#pills-africa" role="tab" aria-controls="pills-africa" aria-selected="true">Africa</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-asia-tab" data-toggle="pill" href="#pills-asia" role="tab" aria-controls="pills-asia" aria-selected="false">Asia</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-australia-tab" data-toggle="pill" href="#pills-australia" role="tab" aria-controls="pills-australia" aria-selected="true">Australia</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-europe-tab" data-toggle="pill" href="#pills-europe" role="tab" aria-controls="pills-europe" aria-selected="false">Europe</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-americas-tab" data-toggle="pill" href="#pills-americas" role="tab" aria-controls="pills-americas" aria-selected="false">Americas</a>
      </li>
    </ul>
  </div>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-africa" role="tabpanel" aria-labelledby="pills-africa-tab">
      <%= render 'continent', countries: @countries, continent_adj: "Africa" %>
    </div>
    <div class="tab-pane fade" id="pills-asia" role="tabpanel" aria-labelledby="pills-asia-tab">
    <%= render 'continent', countries: @countries, continent_adj: "Asia" %>
    </div>
    <div class="tab-pane fade" id="pills-australia" role="tabpanel" aria-labelledby="pills-australia-tab">
    <%= render 'continent', countries: @countries, continent_adj: "Australia" %>
    </div>
    <div class="tab-pane fade show" id="pills-europe" role="tabpanel" aria-labelledby="pills-europe-tab">
    <%= render 'continent', countries: @countries, continent_adj: "Europe" %>
    </div>
    <div class="tab-pane fade" id="pills-americas" role="tabpanel" aria-labelledby="pills-americas-tab">
    <%= render 'continent', countries: @countries, continent_adj: "Americas" %>
    </div>
  </div>
</div>

<div class="info-section" id="connect-with-users">
  <h2>Connect With Other Users</h2>
  <% @users.each do |user| %>
    <%= link_to profile_path(user) do  %>
        <div class="user-card d-flex">
          <%= image_tag "http://placehold.it/30x30", class: "avatar" %>
        </div>
          <p><%= user.first_name  %></p>
    <% end %>
  <% end %>
</div>





