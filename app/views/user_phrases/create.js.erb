function refreshForm(innerHTML) {
 const newPhraseForm =  document.getElementById('new_phrase');
  newPhraseForm.innerHTML = innerHTML;
}

function addPhrase(phraseHTML) {
  const phrases = document.getElementById('phrases');
  phrases.insertAdjacentHTML('beforeend', phraseHTML);
}

